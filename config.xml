<?xml version='1.0' encoding='utf-8'?>
<widget id="de.echoapp" version="0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>Echo</name>
    <description>
        Ein christlicher Terminkalender für Gemeinden rund un Köln.
    </description>
    <author email="echo@silas.link" href="http://echoapp.">
        Project Echo Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <access origin="cdvfile://*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <edit-config file="app/src/main/AndroidManifest.xml" mode="merge" target="/manifest/application">
            <application android:usesCleartextTraffic="true" />
        </edit-config>
        <icon src="src/client/img/logo.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon src="src/client/img/ios/180.png" width="180" height="180" />
        <icon src="src/client/img/ios/120.png" width="120" height="120" />
        <icon src="src/client/img/ios/60.png" width="60" height="60" />
        <icon src="src/client/img/ios/76.png" width="76" height="76" />
        <icon src="src/client/img/ios/152.png" width="152" height="152" />
        <icon src="src/client/img/ios/40.png" width="40" height="40" />
        <icon src="src/client/img/ios/80.png" width="80" height="80" />
        <icon src="src/client/img/ios/57.png" width="57" height="57" />
        <icon src="src/client/img/ios/114.png" width="114" height="114" />
        <icon src="src/client/img/ios/72.png" width="72" height="72" />
        <icon src="src/client/img/ios/144.png" width="144" height="144" />
        <icon src="src/client/img/ios/167.png" width="167" height="167" />
        <icon src="src/client/img/ios/29.png" width="29" height="29" />
        <icon src="src/client/img/ios/58.png" width="58" height="58" />
        <icon src="src/client/img/ios/87.png" width="87" height="87" />
        <icon src="src/client/img/ios/50.png" width="50" height="50" />
        <icon src="src/client/img/ios/100.png" width="100" height="100" />
        <icon src="src/client/img/ios/167.png" width="167" height="167" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="^1" />
    <plugin name="cordova-plugin-webpack" spec="^0.4.7" />
    <plugin name="cordova-plugin-nativestorage" spec="^2.3.2" />
    <plugin name="cordova-plugin-file" spec="^6.0.2" />
    <plugin name="cordova-sqlite-storage" spec="^2.3.0" />
    <plugin name="cordova-plugin-device" spec="^2.0.3" />
    <plugin name="cordova-sqlite-storage" spec="^3.2.0" />
    <plugin name="cordova-plugin-statusbar" spec="^2.4.3" />
    <plugin name="cordova-plugin-local-notification" spec="^0.9.0-beta.2" />
    <plugin name="cordova-plugin-calendar" spec="^5.1.5" />
    <preference name="StatusBarOverlaysWebView" value="true" />
    <preference name="Fullscreen" value="true" />
    <preference name="Orientation" value="portrait" />
    <engine name="android" spec="^8.1.0" />
    <engine name="browser" spec="^6.0.0" />
    <engine name="ios" spec="^5.1.1" />
</widget>
