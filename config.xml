<?xml version='1.0' encoding='utf-8'?>
<widget id="link.silas.echo" version="0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Echo</name>
    <description>
        Ein christlicher Terminkalender für Gemeinden rund un Köln.
    </description>
    <author email="echo@silas.link" href="http://echo.silas.link">
        Project Echo Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-webpack" spec="0.0.2" />
    <plugin name="cordova-plugin-nano-sqlite" spec="^1.5.0" />
    <plugin name="cordova-plugin-nativestorage" spec="^2.3.2" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <engine name="android" spec="^7.1.2" />
    <engine name="browser" spec="^5.0.4" />
</widget>
